<% include header %>

    <link rel="stylesheet" href="/static/posts.css">

    <div class="main-box">
        <div class="content-center">
            <div class="table-responsive">
                
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>标题</th>
                            <th>内容</th>
                            <th>标签</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(var i in postsList) {%>
                            <tr>
                                <td>
                                    <div class="posts-item-line">
                                        <a href="/system/p?id=<%= postsList[i].id %>">
                                            <%= postsList[i].title %>
                                        </a>
                                    </div>
                                </td>

                                <td>
                                    <div class="posts-item-line">
                                        <%- postsList[i].content %>
                                    </div>
                                </td>

                                <td>
                                    <div class="posts-item-line">
                                        <%= postsList[i].tag_name %>
                                    </div>
                                </td>

                                <td>
                                    <div class="posts-item-line">
                                        <%= postsList[i].create_date %>
                                    </div>
                                </td>

                                <td>
                                    <div>
                                        <a href="/system/edit?id=<%= postsList[i].id %>" class="btn btn-sm btn-primary">修改</a>
                                        <button onclick="deletePosts('<%= postsList[i].id %>')" class="btn btn-sm btn-danger">删除</button>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <% include template/pageGroup %>
    </div>

    <% include footer %>

    <script>

        function deletePosts(e) {
            $.ajax({
                url: '/system/posts/delete?id='+e,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function() {
                    alert('删除成功')
                    window.location.reload();
                },
                error: function() {

                }
            })
        }
    </script>